<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
  <title><![CDATA[php-shapeshiftio-api]]></title>
  <parser>
    <default-package-name>php-shapeshiftio-api</default-package-name>
    <target>doc</target>
    <encoding>utf8</encoding>
    <markers>
        <item>TODO</item>
        <item>FIXME</item>
    </markers>
    <extensions>
        <extension>php</extension>
    </extensions>
  </parser>
  <transformer>
    <target>doc</target>
  </transformer>
  <files>
	  <directory>lib</directory>
	  <ignore>vendor/*</ignore>
	  <ignore>tests/*</ignore>
      <ignore-hidden>true</ignore-hidden>
      <ignore-symlinks>true</ignore-symlinks>
  </files>
  <logging>
    <level>warn</level>
    <paths>
        <default>{APP_ROOT}/doc/log/{DATE}.log</default>
        <errors>{APP_ROOT}/doc/log/{DATE}.errors.log</errors>
    </paths>
  </logging>
  <transformations>
      <template name="clean"/>
  </transformations>
</phpdoc>